<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/products/list">products</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>
<h1 class="display-4">Add Article</h1>
<form method="post" action="/products/update?id=<%=product.id%>">
    <div class="form-group">
        <label for="title">Category</label>
        <input type="text" name="category" class="form-control" value="<%=product.category%>"></div>
    </div>
    <div class="form-group">
        <label for="body">Name</label>
        <textarea name="name" class="form-control"><%=product.name%></textarea>
    </div>
    <div class="form-group">
        <label for="body">Price</label>
        <textarea name="price" class="form-control"><%=product.price%></textarea>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>